
@{
    ViewData["Title"] = "Job List";
    ViewData["Topic"] = "";

}

@model IEnumerable<JobModel>


<div class="content" style="margin-left: 14%; height: 1000px; background-image: url('/images/Parallax.jpg'); background-repeat: no-repeat; position: center;background-size:100% 100%;">

    <br>
    <div class="container">
    @if (ViewBag.IsSuccess == true)
    {
        <div class="alert alert-success" role="alert">
            <strong>Congragulations!</strong> You added a new job title successfully.
        </div>


    }

    @if (ViewBag.IsDelete == true)
    {
        <div class="alert alert-success" role="alert">
            Successfully Deleted.
        </div>


    }
</div>
    <br>


    <div style="margin-left:18%;margin-right:27%;background-color:#191616">
        <br>
        <a asp-controller="Emp_Manage" asp-action="AddJob" class="btn-success" style="margin-left:20px">+ Add New </a>
        <a asp-controller="Emp_Manage" asp-action="AddEmployee" class="btn-success" style="margin-left:30px">Back&nbsp;&nbsp;&nbsp;&nbsp;</a>

        <br>
        <br>
        <div class="table-responsive col-sm-10 col-md-12 col-xl-12">
            <table class="table table-hover " >

                <thead>

                </thead>
                <tbody>

                    @foreach (var job in Model)
                    {
                        @*onclick="return confirm('Are you sure')"*@

                        <tr style="line-height: 20px">


                            <td scope="row">
                                <font style="color:white"> @job.JobName</font>
                            </td>
                            <td>
                                <a asp-controller="Emp_Manage" asp-action="DeleteJob" asp-route-id="@job.JobId" onclick="return confirm('Do you want to delete this job type ?')">

                                    <img src="~/images/unnamed.png" style="width:30px;height:30px" />
                                    @*<font style="color:white"> Delete</font>*@
                                </a>
                            </td>

                        </tr>
                    }



                </tbody>
            </table>
        </div>





    </div>
</div>
