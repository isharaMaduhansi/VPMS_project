

@{
    ViewData["Title"] = "Add New Job";
    ViewData["Topic"] = "Add New Position";
}

@model JobModel
   
    <div style="margin-left: 15%; height: 600px; background-image: url('/images/job.jpg'); background-repeat: no-repeat; position: center;background-size:100% 100%;">
  
        <br> <br> <br> <br> <br>
        <form enctype="multipart/form-data" method="post" asp-action="AddJob" asp-controller="Emp_Manage" style="margin-left:20%;width:600px">
            <div class="form-group">
                <input asp-for="JobName" class="form-control" placeholder="Enter New Position" style="height:50px;" />
            </div>

            <div class="form-group">
                <input type="submit" value="Add New" class="btn-block" /><br><br>
                <a asp-controller="Emp_Manage" asp-action="ModifyList" class="btn btn-success btn-lg btn-block" style="margin-top:20px">Cancel</a>

            </div>


        </form>
    </div>
