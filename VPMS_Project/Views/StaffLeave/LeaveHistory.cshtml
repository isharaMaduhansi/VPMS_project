@{
    Layout = "_StaffLayout";
    ViewData["Title"] = "Leave History";
    ViewData["Topic"] = "Leave";
}
<link href="~/CSS/MenuStyleSheet.css" rel="stylesheet" />

@model IEnumerable<LeaveApplyModel>


<div class="content">
    <div class="navbar">
        <a asp-controller="StaffLeave" asp-action="LeaveBalance"><i class='far fa-calendar-alt' style="margin-right:7px"></i> Leave Balance</a>
        <a asp-controller="StaffLeave" asp-action="LeaveApply"><i class='far fa-calendar-plus' style="margin-right:7px"></i> Leave Apply</a>
        <a asp-controller="StaffLeave" asp-action="LeaveHistory"><i class="fa fa-address-book-o" style="margin-right:7px"></i> Leave History</a>
    </div>
    <br><br>
    <div style="margin-left:8%;width:80%">
        @if (ViewBag.IsDelete == true)
        {
            <div class="alert alert-success alert-dismissible fade show container" role="alert">
                <strong>Succesffully Deleted!</strong>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>


        }
    </div>
    <br>

    @foreach (var leave in Model)
    {
        <div class="card bg-light" style="margin-bottom:30px;margin-left:8%;width:80%">
            <div class="card-header" style="font-size:13pt;display:flex;justify-content:space-between">
                <font class="card-title">
                   <b> @leave.NoOfDays Days </b> &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    <span style="font-size:11pt">
                        <i class='far fa-calendar-alt'></i> From &nbsp; @leave.Startdate.Day -@leave.Startdate.Month - @leave.Startdate.Year &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;
                        <i class='far fa-calendar-alt'></i> To &nbsp; @leave.EndDate.Day - @leave.EndDate.Month - @leave.EndDate.Year
                    </span>
                </font>
                <font class="card-title">
                    <a asp-controller="StaffLeave" asp-action="EditLeave" asp-route-id="@leave.LeaveApplyId" class="text-primary">Edit </a>|
                    <a asp-controller="StaffLeave" asp-action="DeleteLeave" asp-route-id="@leave.LeaveApplyId" class="text-danger" onclick="return confirm('Do you want to delete this leave?')"> Delete</a>

                </font>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <blockquote class="blockquote mb-0">
                            @leave.LeaveType
                        </blockquote>
                        <div style="margin-top:20px"><i class='far fa-calendar-alt'></i>  Applied Date : @leave.AppliedDate.Day - @leave.AppliedDate.Month - @leave.AppliedDate.Year</div>


                    </div>
                    <div class="col-md-4"><p style="font-size:12pt">Reason: <br>@leave.Reason</p></div>
                    <div class="col-md-4">
                        <font class="text-success"><i class='fas fa-hourglass-end'></i> Waiting for recommendation</font><br>
                        <div style="display:none;margin-top:10px">  Recommender :  <br></div>
                        <div style="display:none;margin-top:3px">  Approver    :  </div>
                    </div>

                </div>
            </div>
        </div>


    }

</div>

