@{
    Layout = "_StaffLayout";
    ViewData["Title"] = "Leave History";
    ViewData["Topic"] = "Leave";
}
<link href="~/CSS/MenuStyleSheet.css" rel="stylesheet" />

@model LeaveApplyModel


<div class="content">
    <div class="navbar">
        <a asp-controller="StaffLeave" asp-action="LeaveBalance"><i class='far fa-calendar-alt' style="margin-right:7px"></i> Leave Balance</a>
        <a asp-controller="StaffLeave" asp-action="LeaveApply"><i class='far fa-calendar-plus' style="margin-right:7px"></i> Leave Apply</a>
        <a asp-controller="StaffLeave" asp-action="LeaveHistory"><i class="fa fa-address-book-o" style="margin-right:7px"></i> Leave History</a>
    </div>
    <br><br>   <br>
    <a asp-controller="StaffLeave" asp-action="LeaveHistory" class="btn btn-outline-success" style="margin-left:80%">View All </a>
    <br><br>


    <div class="card bg-light" style="margin-bottom:30px;margin-left:8%;width:80%;height:300px">
        <div class="card-header" style="font-size:13pt;display:flex;justify-content:space-between">
            <font class="card-title">
                @Model.NoOfDays Days  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                <span style="font-size:11pt">
                    <i class='far fa-calendar-alt'></i> From&nbsp; @Model.Startdate.Day - @Model.Startdate.Month - @Model.Startdate.Year&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                <i class='far fa-calendar-alt'></i> To&nbsp; @Model.EndDate.Day - @Model.EndDate.Month - @Model.EndDate.Year
                </span>
            </font>
            <font class="card-title">
                <a asp-controller="StaffLeave" asp-action="EditLeave" asp-route-id="@Model.LeaveApplyId" class="text-primary">Edit </a>|
                <a asp-controller="StaffLeave" asp-action="DeleteLeave" asp-route-id="@Model.LeaveApplyId" class="text-danger" onclick="return confirm('Do you want to delete this leave?')"> Delete</a>

            </font>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <blockquote class="blockquote mb-0">
                        @Model.LeaveType
                    </blockquote><br>
                    <div> Applied Date : @Model.AppliedDate.Day - @Model.AppliedDate.Month - @Model.AppliedDate.Year</div>


                </div>
                <div class="col-md-4"><p style="font-size:13pt">Reason: <br><br>@Model.Reason</p></div>
                <div class="col-md-4">
                    <font class="text-success"><i class='fas fa-hourglass-end'></i> @Model.Status</font><br>
                    <div style="display:none;margin-top:10px">  Recommender :  <br></div>
                    <div style="display:none;margin-top:6px">  Approver    :  </div>
                </div>

            </div>
        </div>
    </div>




</div>


