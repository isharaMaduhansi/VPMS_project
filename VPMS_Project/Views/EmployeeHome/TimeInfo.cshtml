@model IEnumerable<TimeTrackerModel>

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width , initial-scale=1, shrink-to-fit=no">
    <title> Time Tracker Details</title>
    <script src='https://kit.fontawesome.com/a076d05399.js'></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="http://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.9.4/css/jquery.dataTables.css">
    <link rel="stylesheet" type="text/css" href="http://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.9.0/css/jquery.dataTables_themeroller.css">

</head>
<body>
    <div style="margin-left:3%;height:600px;">
        <div class="navbar">
            <h3 style="font-family:Cambria;color:#173A47;">
                <br>
                <a asp-controller="EmployeeHome" asp-action="Portal" title="Back">
                    <i class='fas fa-arrow-left' style="margin-right:15px;color:#173A47;font-size:14pt"></i>
                </a> Time Tracker Details
            </h3>
        </div>

        <br>
        <div class="table-responsive col-sm-10 col-md-12 col-xl-12">
            <table class="table table-hover " id="example">

                <thead>
                    <tr style="line-height: 60px">

                        <th scope="row">Date </th>
                        <th scope="row">In Time </th>
                        <th scope="row">Out Time </th>
                        <th scope="row">Total Hours </th>
                        <th scope="row">Break Time  </th>
                        <th scope="row">Working Hours </th>
                        <th scope="row">Status </th>

                    </tr>
                </thead>
                <tbody>
                    
                    @foreach (var time in Model)
                    {

                        <tr style="line-height: 60px">

                            <td scope="row">@time.Date.Day-@time.Date.Month-@time.Date.Year </td>
                            <td scope="row">@time.InTime.ToString("hh:mm tt")</td>
                            @if (time.Status == "Finish")
                            {
                                <td scope="row">@time.OutTime.ToString("hh:mm tt") </td>
                            }
                            else
                            {
                                <td scope="row">Not enter </td>
                            }


                            @{
                                Double t = Math.Round((Double)time.TotalHours, 2);
                                var timeSpan1 = TimeSpan.FromHours(t);
                                int hh1 = timeSpan1.Hours;
                                int mm1 = timeSpan1.Minutes;
                                String total = hh1 + " hours " + mm1 + " minutes";
                            }

                            @{
                                Double brk = Math.Round((Double)time.BreakingHours, 2);
                                var timeSpan2 = TimeSpan.FromHours(brk);
                                int hh2 = timeSpan2.Hours;
                                int mm2 = timeSpan2.Minutes;
                                String Break = hh2 + " hours " + mm2 + " minutes";
                            }
                            @{
                                Double w = Math.Round((Double)time.WorkingHours, 2);
                                var timeSpan3 = TimeSpan.FromHours(w);
                                int hh3 = timeSpan3.Hours;
                                int mm3 = timeSpan3.Minutes;
                                String Work = hh3 + " hours " + mm3 + " minutes";
                            }
                            <td scope="row">@total </td>
                            <td scope="row">@Break </td>
                            <td scope="row">@Work </td>
                            <td scope="row">@time.Status </td>

                        </tr>

                    }





                </tbody>
            </table>
        </div>

    </div>
    <script type="text/javascript" charset="utf8" src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.8.2.min.js"></script>
    <script type="text/javascript" charset="utf8" src="http://ajax.aspnetcdn.com/ajax/jquery.dataTables/1.9.4/jquery.dataTables.min.js"></script>
    <script>
        $(function () {
            $("#example").dataTable();
        })
    </script>
</body>
</html>