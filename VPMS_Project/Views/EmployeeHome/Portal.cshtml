@model TimeTrackerModel

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width , initial-scale=1, shrink-to-fit=no">
    <title>My Account</title>
    <script src='https://kit.fontawesome.com/a076d05399.js'></script>
