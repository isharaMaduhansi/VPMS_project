@model TimeTrackerModel

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width , initial-scale=1, shrink-to-fit=no">
    <title>My Account</title>
    <script src='https://kit.fontawesome.com/a076d05399.js'></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <link href="~/CSS/StyleTime.css" rel="stylesheet" />
</head>
<body style="background-image:url('images/parallax.jpg');background-repeat:no-repeat;position:center;background-size:100% 100%;height:950px;width:90%;max-width:100%">
    <header>
        <nav class="navbar navbar-dark " style="width:111%;line-height:25px;background-color:#175A47">
            <div>
                <font style="font-size:15pt;color:white;font-family:'Bell MT';font-weight:bold;margin-left:20px"><i class="fa fa-fw fa-home"></i> Bellvantage (Pvt) Ltd</font>
            </div>

        </nav>
    </header>

    <div class="container">
        <br>
        @if (ViewBag.StartBreak == "Break")
        {
            <div class="alert alert-success" role="alert" id="msg">
                <strong> Now you are in break time! .</strong> To end break time Click <span class="badge badge-secondary"> End Break Time </span> button.
            </div>
        }
        @if (ViewBag.IsExist == true)
        {
            <div class="alert alert-success alert-dismissible fade show container" role="alert">
                <strong>Sorry!</strong> You have already entered your In-time today.
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

        }

        @if (ViewBag.EndBreak == true)
        {
            <div class="alert alert-success alert-dismissible fade show container" role="alert">
                <strong>Sorry! </strong>First You have to end break time before enter Out-time today.
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

        }

        @if (ViewBag.IsOutExist == true)
        {
            <div class="alert alert-success alert-dismissible fade show container" role="alert">
                <strong>Sorry!</strong> You have already entered your Out-time today.
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

        }

        @if (ViewBag.IsFail == true)
        {
            <div class="alert alert-success alert-dismissible fade show container" role="alert">
                <strong>Sorry! </strong>First You have to enter your In-time today.
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

        }

        <div class="row" style="margin-top:20px;margin-bottom:100px">
            @*<div class="row-cols-10"><div class="square" style="height: 80px;width: 300px;background-color: #555;opacity:0.3;border: 2px solid red;border-radius:10%;margin-left:10px;margin-top:20px;margin-bottom:10px"></div></div>*@
            <div style="width:50%">
                <a asp-controller="EmployeeHome" asp-action="Home">
                    <div class="card" style=" opacity: 0.4; border-radius: 5%; margin-left: 100px; margin-top: 20px; margin-bottom: 20px;height:100px;width:300px;background-color:black">

                        <div class="container" style="margin-top:30px;">
                            <font style="font-size:14pt;color:white;font-weight:bold;"><center>Admin Portal</center></font>

                        </div>
                    </div>
                </a>
                <div class="card" style=" opacity: 0.4;  border-radius: 5%; margin-left: 100px; margin-top: 100px; margin-bottom: 20px;height:100px;width:300px;background-color:black">

                    <div class="container" style="margin-top:30px;">
                        <font style="font-size:14pt;color:white;font-weight:bold;"><center>Manager Portal</center></font>

                    </div>
                </div>
                <a asp-controller="StaffHome" asp-action="StaffDash">
                    <div class="card" style=" opacity: 0.4; border-radius: 5%; margin-left: 100px; margin-top: 100px; margin-bottom: 20px;height:100px;width:300px;background-color:black">

                        <div class="container" style="margin-top:30px;">
                            <font style="font-size:14pt;color:white;font-weight:bold;"><center>Staff Portal</center></font>

                        </div>
                    </div>

                </a>

            </div>

            <div style="width:40%;margin-left:8%" id="track">

                <div class="wrap">
                    <h4>
                        Mark Attendence
                    </h4><br>
                    <div class="option">

                        <a id="play" onclick="InFunc()" asp-controller="EmployeeHome" asp-action="InTime"> IN</a>
                        <a id="stop" onclick="playFunc()" asp-controller="EmployeeHome" asp-action="BreakTime" asp-route-id="@ViewBag.Track"><i class='fas fa-mug-hot'></i> Get Break</a>
                        <a id="reset" onclick="resetFunc()" asp-controller="EmployeeHome" asp-action="OutTime" asp-route-id="@ViewBag.Track"> OUT</a>

                    </div>
                    <div class="option" style="margin-top:10px">
                        <a id="stop" onclick="endBreak()" asp-controller="EmployeeHome" asp-action="BreakEndTime" asp-route-id="@ViewBag.Track"><i class="fa fa-window-close-o"></i> End Break Time</a>
                    </div>
                    <br>
                    <div id="timer">
                        <svg width="260" height="260">
                            <circle class="defaultCircle" cx="125" cy="125" r="120" stroke="#175A47" stroke-width="10" fill="none" stroke-linecap="round" />
                            <circle id="animateCircle" cx="125" cy="125" r="120" stroke="#175A47" stroke-width="10" fill="none" stroke-linecap="round" />

                        </svg>

                        <span style="font-size:17pt;font-weight:bold;font-family:'Bell MT'">Work Hours: </span>
                        <span style="font-size:15pt;font-weight:bold;font-family:'Cambria'">@ViewBag.Work</span>

                    </div>
                    <div class="col" style="margin-left:16%;margin-top:10px">
                        <div class="row">
                            <span style="font-size: 12pt; font-weight: bold; font-family:'Cambria'">Break Hours : @ViewBag.Break </span>
                        </div><br>
                        <div class="row">
                            <span style="font-size:12pt;font-weight:bold;font-family:'Cambria'">In Time : @ViewBag.In </span>
                        </div><br>
                        <div class="row">
                            <span style="font-size: 12pt; font-weight: bold; font-family:'Cambria'">Out Time : @ViewBag.Out </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <footer class="bd-footer text-muted text-center" style="background-color:#175A47;position:absolute;width:100%;white-space:nowrap;line-height:60px">
        <div class="container-fluid p-3 p-md-3">

            &copy; @DateTime.Now.Year <font style="color:royalblue">&nbsp; Bellvantage (Pvt) Ltd.&nbsp;</font> All rights reserved.

        </div>

    </footer>

    <script src="~/lib/jquery/jquery.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js" integrity="sha384-w1Q4orYjBQndcko6MimVbzY0tgp4pWB4lZ7lr30WKz0vr/aWKhXdBNmNb5D92v7s" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js" integrity="sha512-bLT0Qm9VnAYZDflyKcBaQ2gg0hSYNQrJ8RilYldYQ1FxQYoCLtUjuuRuZo+fjqhx/qtq/1itJ0C2ejDxltZVFg==" crossorigin="anonymous"></script>

    <script>

        var base;
        var playPause = 0;

        function playFunc() {

    
            playPause = playPause + 1;

            if (playPause === 1) {
                document.getElementById("play").classList.remove("pause");
                $("#animateCircle").css("animation-play-state", "paused");
                playPause = 0;


            } else if (playPause === 2) {

                document.getElementById("play").classList.add("pause");
                $("#animateCircle").addClass("addAnimation");
                $("#animateCircle.addAnimation").css("animation-play-state", "running");

            }

        }

        function InFunc() {
            document.getElementById("play").classList.add("pause");
            $("#animateCircle").addClass("addAnimation");
            $("#animateCircle.addAnimation").css("animation-play-state", "running");
            alert('Do you want to submit In-time today ?');
        }

        function endBreak() {
   
            document.getElementById("play").classList.add("pause");
            $("#animateCircle").addClass("addAnimation");
            $("#animateCircle.addAnimation").css("animation-play-state", "running");
        }




        function resetFunc() {

            $("#animateCircle").removeClass("addAnimation");
            alert('Do you want to submit Out-time today ?');

        }






    </script>



</body>
</html>