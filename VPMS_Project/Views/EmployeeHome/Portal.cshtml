                            <span style="font-size: 12pt; font-weight: bold; font-family:'Cambria'">Out Time : @ViewBag.Out </span>
                        </div><br>

                    </div>

                    <a asp-controller="EmployeeHome" asp-action="TimeInfo" asp-route-id="@ViewBag.EmpId" style="font-size: 14pt;line-height:40px ; font-family:'Cambria';background: linear-gradient(45deg, #173A47,#607d8b);color:white" class="btn btn-block">View&nbsp; Recorded&nbsp; Details </a>
                </div>
            </div>

        </div>
    </div>

    <footer class="bd-footer text-muted text-center" style="background-color:#173A47;position:absolute;width:100%;white-space:nowrap;line-height:60px">
        <div class="container-fluid p-3 p-md-3">

            &copy; @DateTime.Now.Year <font style="color:royalblue">&nbsp; Bellvantage (Pvt) Ltd.&nbsp;</font> All rights reserved.

