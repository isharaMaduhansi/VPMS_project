
@using VPMS_Project.Models;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model WorkHourModel
<br>
    <!-- Button trigger modal -->
    <button type="button" class="btn btn-outline-success" data-toggle="modal" data-target="#exampleModalLong" style="background-color:#173A47">
       <font style="color:white"> Modify Standard Working Hours</font>
    </button>

    <!-- Modal -->
    <div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Modify Standard Working Hours</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form enctype="multipart/form-data" method="post" asp-action="ModifyWorkHours" asp-controller="AdminAttendence" style="margin-left:10%;">
                        <input hidden asp-for="HourId" />

                        <div class="form-group" style="margin-top:13px">
                            <input asp-for="NoOfHours" class="form-control" value="@Model.NoOfHours" style="height:50px;width:90%" />

                        </div>



                        <div class="modal-footer" style="width:90%">

                            <div class="form-group">
                                <input type="submit" class="btn btn-primary" value="Save Changes" />
                            </div>
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        </div>
                    </form>




                </div>


            </div>
        </div>
    </div>
