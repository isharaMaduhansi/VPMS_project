
@using VPMS_Project.Models;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="card">
    <div class="card-header" >
        <h5 style="font-family:Cambria">Task - @ViewBag.Task  </h5>
    </div>
    <div class="card-body">
        <form enctype="multipart/form-data" method="post" asp-action="TimeSheet" asp-controller="StaffTimeSheet">
            <input hidden value="@ViewBag.TaskId" />

            <div class="row">
                <label class="col-sm-2 col-form-label">Select Start Time</label>
                <div class="col-sm-4 form-group">
                    <input name="Start" type="datetime-local" class="form-control" value="dd/mm/yyyy" required>
                </div>
                <div class="col-sm-5 form-group" style="margin-left:7%">
                    <div class="form-check form-check-inline row">
                        <input class="form-check-input" type="radio" name="Complete" Value="Complete" id="inlineRadio1" required>
                        <label class="form-check-label" for="inlineRadio1">Complete</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="Complete" Value="NotComplete" id="inlineRadio2" required>
                        <label class="form-check-label" for="inlineRadio2">Not Complete</label>
                    </div>
                </div>
                </div>
            <div class="row">
                <label class="col-sm-2 col-form-label">Select End Time</label>
                <div class="col-sm-4 form-group">
                    <input name="End" type="datetime-local" class="form-control" value="dd/mm/yyyy" required>
                </div>
                <div class="col-sm-5 form-group" style="margin-left:7%">
                    <div class="form-group">
                        <input type="submit" class="btn btn-success" value="ADD" style="background-color:#173A47;margin-right:10px;width:100px" />
                        <a class="btn " asp-controller="StaffTimeSheet" asp-action="Cancel" asp-route-id="@ViewBag.TaskId" role="button" style="background-color:#173A47;color:white;width:100px" onclick="myBtn()">Cancel</a>
                    </div>
                </div>
                </div>

</form>
    </div>
</div>

