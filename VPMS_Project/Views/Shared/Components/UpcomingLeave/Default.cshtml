@using VPMS_Project.Models;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model IEnumerable<LeaveApplyModel>


<div class="card" style="margin-left: 2%;width:98%;">
    <div class="card-body">
        <h6 class="card-title" style="font-weight:normal;color:white;background-color:#175A47"><i class="fa fa-paper-plane"></i> Upcoming Approved <br>&nbsp;&nbsp;&nbsp;&nbsp; Leaves</h6><hr>

        @if (Model.Count() == 0)
        {
            <div class="text-primary">
                <i class='far fa-calendar-times' style="color:black"></i>&nbsp;&nbsp; There are no upcoming approved leaves.
            </div>
        }

        @foreach (var emp in Model)
        {
            <br>
            <h6 class="card-subtitle mb-2"><i class='fas fa-user-alt'></i> @emp.EmpName - @emp.NoOfDays Days</h6>
            <p class="card-text text-primary ">
                From &nbsp; @emp.Startdate.Day-@emp.Startdate.Month-@emp.Startdate.Year <br>
                To &nbsp; @emp.EndDate.Day-@emp.EndDate.Month-@emp.EndDate.Year
            </p>
            <hr>
        }
    </div>
</div>
<br>

