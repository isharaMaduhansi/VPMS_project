@{
    Layout = "_Layout";
    ViewData["Title"] = "Time Sheet";
}

@model IEnumerable<TaskModel>

<link href="~/CSS/TimeSheet.css" rel="stylesheet" />


<div class="content">
    <br>
    <div aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="EmployeeHome" asp-action="Portal">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Time Sheet</li>
        </ol>
    </div>
    <br>
    <h1 class="display-4">Daily Time Sheet</h1>

    <br>
    <div class="row">
        <div class="column left">
          
            <div class="card text-center" style="font-family:Cambria">
                <br>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label"><b>Select Date</b></label>
                    <div class="col-sm-10">
                        <input type="date" class="form-control"  placeholder="Password">
                    </div>
                </div>
                <div class="card-body">
                    <table class="table table-hover">
                        <thead>
                            <tr class="text-center">
                                <th scope="col">Task</th>
                                <th scope="col">Allocated Hours</th>
                                <th scope="col">Start Time</th>
                                <th scope="col">End Time</th>
                                <th scope="col">Total Hours</th>
                                <th scope="col"></th>
                            </tr>
                        </thead>

                        <tbody>
                            @if (Model.Count() == 0)
                            {
                                <tr>
                                    <td colspan="6">
                                        <div class="jumbotron jumbotron-fluid">
                                            <div class="container">
                                                <img src="~/images/task.png" />
                                                <h3><b>Add Tasks</b></h3>
                                                <p class="lead">You can add tasks from task list and submit your daily time sheet.</p>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }

                            @foreach (var task in Model)
                            {
                                <tr>
                                    <td scope="row">@task.Name</td>
                                    <td>@task.AllocatedHours</td>
                                    <td>2134435546</td>
                                    <td>56576868979</td>
                                    <td>5</td>
                                    <td><a class="btn btn-danger" asp-controller="StaffTimeSheet" asp-action="TaskNotComplete" asp-route-id="@task.Id" role="button">Remove</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
                <div class="container">
                    <button type="button" class="btn btn-primary btn-lg btn-block" style="background-color:#173A47;font-family:Arial">Submit Time Sheet</button>
                </div>
                <br>
            </div>
        </div>
        <div class="column right" style="background-color:ThreeDHighlight;font-family:Cambria">
            @await Component.InvokeAsync("TaskList", new { id = ViewBag.EmpId })
        </div>
    </div>
</div>

