<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width , initial-scale=1, shrink-to-fit=no">
    <title>@ViewData["Title"] | Leave Manage</title>
    <link href="~/CSS/LeaveStyleSheet.css" rel="stylesheet" />

    <environment include="Development">
        <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />
    </environment>

    <environment exclude="Development">

        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css"
              asp-fallback-href="~/lib/twitter-bootstrap/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only"
              asp-fallback-test-property="position"
              asp-fallback-test-value="absolute"
              integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    </environment>
</head>
<body>
    <header>

        <ul style="width:18%">
            <li><img src="~/images/bell.jpg" id="img" style="width:150px;height:120px;margin-bottom:30px;margin-left:25px" asp-append-version="true" /></li>
            <li>
                <div class="btn-group-vertical" id="myDIV">
                    <a class="btn-block " asp-controller="Emp_Manage" asp-action="LeaveAllocation">Leave Allocation</a>
                    <a asp-controller="Emp_Manage" asp-action="AddEmployee" class="btn-block">Leave Recommendation</a>
                    <a asp-controller="Emp_Manage" asp-action="EditEmp" class="btn-block">Leave Approval</a>
                    <a asp-controller="Emp_Manage" asp-action="SeeRemoveEmp" class="btn-block">Leave Details</a>
                </div>
            </li>

        </ul>

    </header>


    <main role="main">
        <div>
            @RenderBody()
        </div>
    </main>
</body>
</html>
